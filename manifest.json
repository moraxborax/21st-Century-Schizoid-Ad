{
  "manifest_version": 3,
  "name": "21st Century Schizoid Ad",
  "description": "Skip uploader-inserted ads on Bilibili using community timing (Epitaph).",
  "version": "0.1.0",
  "minimum_chrome_version": "114",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "21st Century Schizoid Ad",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.bilibili.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["https://www.bilibili.com/video/*"],
      "js": ["src/content/bilibili.js"],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "epitaph/index.json",
        "epitaph/data/*.json"
      ],
      "matches": ["https://www.bilibili.com/*"]
    }
  ]
}
